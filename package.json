{
  "name": "gif-viewer",
  "displayName": "GIF Viewer",
  "description": "在 VS Code 中预览与控制播放 GIF（逐帧、进度、倍速）",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:gif",
    "onFileSystem:*",
    "onCommand:gifViewer.copyGifClipboardMac"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "GIF Viewer",
      "properties": {
        "gifViewer.defaultPlaybackSpeed": {
          "type": "number",
            "default": 1,
            "minimum": 0.1,
            "maximum": 4,
            "description": "Default playback speed multiplier when opening GIF (0.1 - 4)."
        }
      }
    },
    "customEditors": [
      {
        "viewType": "gifViewer.viewer",
        "displayName": "GIF Viewer",
        "selector": [
          {
            "filenamePattern": "*.gif"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "gifViewer.copyGifClipboardMac",
        "title": "GIF Viewer: 复制 GIF 到系统剪贴板 (macOS)",
        "category": "GIF Viewer"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p . && npm run build-webview && ( [ \"$(uname)\" = \"Darwin\" ] && npm run build:mac-clipboard || echo 'Skip mac helper (non-macOS)' )",
    "watch": "tsc -w -p . & npm run build-webview -- --watch",
    "build-webview": "node scripts/build-webview.js",
    "build:mac-clipboard": "swiftc native/macos-gif-clipboard/main.swift -o native/macos-gif-clipboard/gifclip",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.90.0",
    "esbuild": "^0.21.5",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "gifuct-js": "^2.1.2"
  }
}
